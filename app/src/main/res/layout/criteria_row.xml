<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="8dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/criteria_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="10dp"
            tools:srcCompat="@tools:sample/avatars"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/criteria_image"
            android:paddingLeft="8dp">
            <TextView
                android:id="@+id/preset_criteria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="8pt"
                android:textColor="#9999FF"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/radio_group_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rate_poor"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/rb_button"
                    android:button="@android:color/transparent"
                    android:buttonTint="#9999FF"
                    android:textAlignment="center"
                    android:textColor="#9999FF"
                    android:text="@string/poor"/>
                <RadioButton
                    android:id="@+id/rate_meh"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/rb_button"
                    android:button="@android:color/transparent"
                    android:buttonTint="#9999FF"
                    android:textAlignment="center"
                    android:textColor="#9999FF"
                    android:text="@string/meh"/>
                <RadioButton
                    android:id="@+id/rate_ok"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/rb_button"
                    android:button="@android:color/transparent"
                    android:buttonTint="#9999FF"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:checked="true"
                    android:text="@string/ok"/>
                <RadioButton
                    android:id="@+id/rate_good"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/rb_button"
                    android:button="@android:color/transparent"
                    android:buttonTint="#9999FF"
                    android:textAlignment="center"
                    android:textColor="#9999FF"
                    android:text="@string/good"/>
                <RadioButton
                    android:id="@+id/rate_great"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/rb_button"
                    android:button="@android:color/transparent"
                    android:buttonTint="#9999FF"
                    android:textAlignment="center"
                    android:textColor="#9999FF"
                    android:text="@string/great"/>
            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

